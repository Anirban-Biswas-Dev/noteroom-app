{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "CommonJS",                               
    "rootDir": ".",                                  
    "allowJs": true,                                  
    "checkJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "noImplicitAny": false,  
    "skipLibCheck": true                                 
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
