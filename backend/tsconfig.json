{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "../",
    "outDir": "./dist",
    "paths": {
      "@types/*": ["../types/*"]
    },
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src", "../types"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
